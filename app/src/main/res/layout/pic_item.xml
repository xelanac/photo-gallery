<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_item_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="@color/background_item_pic"
        android:elevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/pic"
                android:layout_width="@dimen/photo_preview_dimen"
                android:layout_height="@dimen/photo_preview_dimen"
                android:layout_alignParentStart="true"
                android:padding="@dimen/image_preview_size"
                android:layout_margin="@dimen/image_preview_margin"/>

            <TextView
                android:id="@+id/name_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/pic"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size"/>

            <ImageView
                android:id="@+id/forward_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/arrow_right_padding"
                android:layout_marginEnd="@dimen/margin_arrow"
                android:src="@drawable/ic_arrow_right"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>